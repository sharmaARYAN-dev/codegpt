{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "The user's unique ID." },
        "displayName": { "type": "string", "description": "The user's display name." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "skills": { "type": "array", "items": { "type": "string" }, "description": "List of the user's skills." },
        "interests": { "type": "array", "items": { "type": "string" }, "description": "List of the user's interests." },
        "reputation": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {"type": "string"},
                    "color": {"type": "string"}
                }
            }
        }
      },
      "required": ["id", "displayName", "email"]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a collaborative project.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "ownerId": { "type": "string", "description": "The ID of the user who owns the project." },
        "memberIds": { "type": "array", "items": { "type": "string" } },
        "tags": { "type": "array", "items": { "type": "string" } },
        "rating": { "type": "number" },
        "forks": { "type": "number" },
        "comments": { "type": "number" }
      },
      "required": ["name", "description", "ownerId"]
    },
    "Event": {
      "title": "Event",
      "description": "Represents a hackathon, workshop, or conference.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["Hackathon", "Workshop", "Conference"] },
        "date": { "type": "string", "format": "date-time" },
        "location": { "type": "string" },
        "description": { "type": "string" },
        "organizerId": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "rating": { "type": "number" }
      },
      "required": ["title", "type", "date", "location", "description", "organizerId"]
    },
    "ForumPost": {
      "title": "Forum Post",
      "description": "Represents a post in a community forum.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "authorId": { "type": "string" },
        "community": { "type": "string" },
        "upvotes": { "type": "number" },
        "comments": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "content", "authorId", "community", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profiles for all users."
    },
    "/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores all projects created on the platform."
    },
    "/events/{eventId}": {
      "schema": { "$ref": "#/entities/Event" },
      "description": "Stores all events like hackathons and workshops."
    },
    "/forumPosts/{postId}": {
      "schema": { "$ref": "#/entities/ForumPost" },
      "description": "Stores all posts from the community forums."
    }
  }
}
