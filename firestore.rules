rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isOwner(uid);
      allow update: if isOwner(uid) && request.resource.data.keys().hasOnly(['displayName', 'email', 'photoURL', 'skills', 'interests', 'bio', 'links', 'reputation', 'updatedAt', 'college', 'branch', 'year', 'xp', 'level', 'connections', 'incomingRequests', 'sentRequests', 'bookmarks']);

      allow delete: if false;
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Only owner can update project details like commentCount, anyone can send a join request
      allow update: if isOwner(resource.data.ownerId) || (isSignedIn() && request.resource.data.keys().hasOnly(['joinRequests', 'commentCount']));
      allow delete: if isOwner(resource.data.ownerId);
      match /chat/{msgId} {
        allow read: if isSignedIn();
        // Any signed-in user can create chat messages for now
        allow create: if isSignedIn();
        allow update, delete: if false;
      }
    }

    match /forumPosts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Only author can update or delete
      allow update, delete: if isOwner(resource.data.authorId);
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
         // Only author can update or delete
        allow update, delete: if isOwner(resource.data.authorId);
      }
    }

    match /events/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
       // Only organizer can update or delete
      allow update, delete: if isOwner(resource.data.organizerId);
    }
  }
}
