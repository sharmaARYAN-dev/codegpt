rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isOwner(uid);
      allow update: if isOwner(uid);
      allow delete: if false;
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Only owner can update project details
      allow update: if isOwner(resource.data.ownerId);
      allow delete: if isOwner(resource.data.ownerId);
      match /chat/{msgId} {
        allow read: if isSignedIn();
        // Members of the project can create chat messages
        allow create: if isSignedIn() && (request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId || request.auth.uid in get(/databases/$(database)/documents/projects/$(projectId)).data.members.map(m => m.uid));
        allow delete: if false;
      }
    }

    match /forumPosts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Only author can update or delete
      allow update, delete: if isOwner(resource.data.authorId);
      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
         // Only author can update or delete
        allow update, delete: if isOwner(resource.data.authorId);
      }
    }

    match /events/{eventId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
       // Only organizer can update or delete
      allow update, delete: if isOwner(resource.data.organizerId);
    }
  }
}
